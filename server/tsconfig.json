{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../",
    "paths": {
      "@server/*": ["server/*"],
      "@shared/*": ["shared/*"]
    },
    "outDir": "../dist/server",
    "noEmit": false,
    "typeRoots": ["../types", "../node_modules/@types"],
    "moduleResolution": "bundler",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["server", "shared", "../types"]
}