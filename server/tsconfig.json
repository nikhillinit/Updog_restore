{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Express/Node.js APIs use dot notation by design (app.disable, process.env, res.setHeader, etc.)
    // This setting allows idiomatic Express code while maintaining type safety for actual issues
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": "../",
    "paths": {
      "@server/*": ["server/*"],
      "@shared/*": ["shared/*"]
    },
    "outDir": "../dist/server",
    "noEmit": false,
    "typeRoots": ["../types", "../node_modules/@types"],
    "moduleResolution": "bundler",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["server", "shared", "../types"]
}