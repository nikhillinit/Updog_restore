{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../",
    "paths": {
      "@/*": ["client/src/*"],
      "@/core/*": ["client/src/core/*"],
      "@/lib/*": ["client/src/lib/*"],
      "@shared/*": ["shared/*"]
    },
    "jsx": "react-jsx",
    "types": ["vite/client"]
  },
  "include": ["client/src", "shared", "types"]
}