{
  "permissions": {
    "allow": [
      "Bash(npm run lint*)",
      "Bash(npm run test*)",
      "Bash(npm run check*)",
      "Bash(npm run build*)",
      "Bash(npm run doctor*)",
      "Bash(npm run phoenix*)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git fetch*)",
      "Read(**/*)"
    ],
    "deny": [
      "Bash(npm run db:push*)",
      "Bash(git push*)",
      "Bash(rm -rf*)",
      "Write(.env*)",
      "Write(package.json)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": {
          "tools": ["Edit"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint:fix"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "echo 'Commands: /test-smart /fix-auto /deploy-check /workflows | Agents: waterfall-specialist test-repair perf-guard db-migration'"
  },
  "includeCoAuthoredBy": true,
  "cleanupPeriodDays": 30,
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1"
  }
}
