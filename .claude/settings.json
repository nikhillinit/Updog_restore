{
  "permissions": {
    "allow": [
      "Bash(npm run lint:*)",
      "Bash(npm run test:*)",
      "Bash(npm run check:*)",
      "Bash(npm run build:*)",
      "Bash(npm run doctor:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Read(**/*)"
    ],
    "deny": [
      "Bash(npm run db:push*)",
      "Bash(git push*)",
      "Write(.env*)",
      "Write(package.json)"
    ]
  },
  "hooks": {
    "PostToolUse": {
      "Edit(**/*.ts)": "npm run lint:fix",
      "Edit(**/*.tsx)": "npm run lint:fix"
    }
  },
  "statusLine": {
    "type": "command",
    "command": "echo 'üõ†Ô∏è Commands: /test-smart /fix-auto /deploy-check /workflows | ü§ñ Agents: waterfall-specialist test-repair perf-guard db-migration'"
  },
  "includeCoAuthoredBy": true,
  "cleanupPeriodDays": 30,
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1"
  }
}
