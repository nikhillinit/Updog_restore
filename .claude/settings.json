{
  "cleanupPeriodDays": 30,
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1"
  },
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Bash(npm run lint:*)",
      "Bash(npm run test:*)",
      "Bash(npm run check:*)",
      "Bash(npm run build:*)",
      "Bash(npm run doctor:*)",
      "Bash(npm run phoenix:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git fetch:*)",
      "Bash(git push:*)",
      "Read(**/*)"
    ],
    "deny": [
      "Bash(npm run db:push:*)",
      "Bash(rm -rf:*)",
      "Write(.env*)",
      "Write(package.json)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "C:\\dev\\Updog_restore\\scripts\\hooks\\session-start-hook.cmd",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "C:\\dev\\Updog_restore\\scripts\\hooks\\discovery-hook.cmd",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "C:\\dev\\Updog_restore\\scripts\\hooks\\complexity-checkpoint-hook.cmd",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint:fix"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "echo 'Commands: /test-smart /fix-auto /deploy-check /workflows | Agents: waterfall-specialist test-repair perf-guard db-migration'"
  },
  "enabledPlugins": {
    "cicd-automation@claude-code-workflows": true
  }
}
