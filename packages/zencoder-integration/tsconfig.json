{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "baseUrl": ".",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "paths": {
      "@povc/agent-core": ["../agent-core/dist/index.d.ts"],
      "@povc/agent-core/*": ["../agent-core/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}