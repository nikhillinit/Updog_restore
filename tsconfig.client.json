{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./.tsbuildinfo.client",
    "jsx": "react-jsx",
    "types": ["node"],
    // Temporary relief for client-side code
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": false,  // Temporarily relaxed for UI code
    "noPropertyAccessFromIndexSignature": true  // Keep for safety
  },
  "include": ["types", "client/**/*", "shared/**/*", "packages/agent-core/src/ConversationMemory.ts", "packages/agent-core/src/Logger.ts"],
  "exclude": ["server/**/*", "**/*.test.ts", "**/*.test.tsx", "packages/**/examples/**/*", "packages/**/manual-test-*"]
}