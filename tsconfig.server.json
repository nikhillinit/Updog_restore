{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist/server",
    "rootDir": ".",
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "tsBuildInfoFile": "./.tsbuildinfo.server",
    // Disable strict checks for production build
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitOverride": false,
    "strictNullChecks": false,
    "noImplicitAny": false
  },
  "include": [
    "types", 
    "server/**/*", 
    "shared/**/*",
    "client/src/core/**/*",
    "client/src/lib/**/*",
    "client/src/utils/**/*",
    "client/src/schemas/**/*",
    "client/src/metrics/**/*",
    "vite.config.ts"
  ],
  "exclude": [
    "client/src/components/**/*",
    "client/src/pages/**/*",
    "client/src/hooks/**/*",
    "client/src/services/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules",
    "dist",
    "node_modules/**/@types/**",
    "node_modules/**/dist/**",
    "node_modules/**/*.d.ts"
  ]
}