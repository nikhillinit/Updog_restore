{
  "version": 2,
  "buildCommand": "npm run build:web",
  "outputDirectory": "dist/public",
  "installCommand": "npm ci",
  "framework": "vite",
  
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.23"
    }
  },
  
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}