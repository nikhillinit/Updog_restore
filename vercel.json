{
  "version": 2,
  "buildCommand": "npm run build:web",
  "outputDirectory": "dist",
  "installCommand": "npm ci",
  "framework": "vite",
  
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.23"
    }
  },
  
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}