{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": ".tscache",
    "noEmit": true,
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "noUncheckedIndexedAccess": true,  // Re-enabled for base (shared/server)
    "exactOptionalPropertyTypes": false, // TODO: Re-enable after chart library consolidation (316 errors)",
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,  // Re-enabled for base
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "skipLibCheck": true, // Skip type checking of declaration files in node_modules
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@/core/*": ["./client/src/core/*"],
      "@/lib/*": ["./client/src/lib/*"],
      "@shared/*": ["./shared/*"],
      "@server/*": ["./server/*"]
    }
  }
}
