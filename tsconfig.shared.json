{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./.tsbuildinfo.shared",
    "outDir": "./dist/shared",
    "rootDir": "./shared",
    "strict": true,
    "noUncheckedIndexedAccess": true,  // Enabled for strict shared module
    "exactOptionalPropertyTypes": false,  // Phase 3 - enable after chart consolidation
    "noPropertyAccessFromIndexSignature": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true
  },
  "include": ["shared/**/*"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "node_modules"]
}