# Railway-optimized Dockerfile
FROM node:22-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache dumb-init

# Copy package files
COPY package*.json ./

# Set environment to skip Husky and other dev scripts
ENV HUSKY=0
ENV NODE_ENV=production

# Install dependencies without scripts (Railway-friendly)
RUN npm ci --only=production --ignore-scripts && npm cache clean --force

# Install dev dependencies for build
RUN npm ci --ignore-scripts

# Copy source code
COPY . .

# Build the application
RUN npm run build:prod

# Clean up dev dependencies
RUN npm prune --production

# Create non-root user
RUN addgroup -g 1001 -S nodejs && adduser -S railway -u 1001
RUN chown -R railway:nodejs /app
USER railway

# Expose port (Railway will set PORT env var)
EXPOSE $PORT

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:' + (process.env.PORT || 3000) + '/health', (res) => process.exit(res.statusCode === 200 ? 0 : 1))"

# Start application with proper signal handling
ENTRYPOINT ["dumb-init", "--"]
CMD ["node", "server/bootstrap.js"]