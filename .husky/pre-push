#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-push checks..."
echo ""
echo "📋 Type checking..."
npm run check || {
  echo "❌ Type check failed. Fix errors before pushing."
  exit 1
}

echo ""
echo "🏗️  Building..."
npm run build || {
  echo "❌ Build failed. Fix build errors before pushing."
  exit 1
}

echo ""
echo "✅ All checks passed. Pushing..."
