# RLS Infrastructure Environment Configuration
# Copy to .env.rls and update with secure passwords

# PostgreSQL Admin (Used only for initial setup)
DB_ADMIN_PASSWORD=SuperSecureAdminPass123!

# Database Role Passwords
APP_DB_PASSWORD=SecureAppPass456!
ANALYTICS_DB_PASSWORD=SecureAnalyticsPass789!
MIGRATOR_DB_PASSWORD=SecureMigratorPass012!
MONITOR_DB_PASSWORD=SecureMonitorPass345!
REPLICATOR_PASSWORD=SecureReplicatorPass678!

# PgBouncer
PGBOUNCER_ADMIN_PASSWORD=SecureBouncer901!

# HAProxy
HAPROXY_STATS_PASSWORD=SecureHAProxyStats234!

# Grafana
GRAFANA_ADMIN_PASSWORD=SecureGrafanaAdmin567!

# Redis
REDIS_PASSWORD=SecureRedisPass890!

# Application
JWT_SECRET=your-256-bit-secret-key-here
NODE_ENV=production

# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=updog
PGBOUNCER_PORT=6432

# SSL/TLS Certificates Paths
SSL_CERT_PATH=/certs/server.crt
SSL_KEY_PATH=/certs/server.key
SSL_CA_PATH=/certs/ca.crt

# Monitoring
PROMETHEUS_RETENTION_DAYS=30
GRAFANA_EXTERNAL_URL=https://monitoring.updog.com

# Backup Configuration
BACKUP_S3_BUCKET=updog-backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Alert Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_API_KEY=your-pagerduty-api-key