# Development Environment Configuration
NODE_ENV=development
PORT=5000

# Database (mock for development)
DATABASE_URL=postgresql://mock:mock@localhost:5432/mock

# Cache (memory for development - no Redis required)
REDIS_URL=memory://

# CORS (common dev ports)
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:3000

# Body parsing
BODY_LIMIT=10mb

# Monitoring (optional in development)
# PROMETHEUS_URL=http://localhost:9090
# ERROR_TRACKING_DSN=

# Circuit Breaker (lenient for development)
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=600000

# Health endpoint access
# HEALTH_KEY=dev-health-key

# Development flags
SHUTDOWN_RETRY_AFTER_SECONDS=5